@model IEnumerable<CategoryWithProductDto>

@{
    ViewData["Title"] = "abc";
}
<h1>Kategoriler</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Products</td>
                <td>
                    <a asp-action="Index2" asp-route-id="@item.Products">@item.CategoryName</a>
                    <a asp-action="Update" asp-route-id="@item.CategoryId">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
                </td>
            </tr>

        }
    </tbody>
</table>