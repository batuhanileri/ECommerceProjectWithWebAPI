@model IEnumerable<CategoryDto>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary" asp-action="Create">Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="GetWithProductsById" asp-route-id="@item.CategoryId">@item.CategoryName</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.CategoryId">Güncelle</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Sil</a>
                </td>
                
            </tr>

        }
    </tbody>
</table>