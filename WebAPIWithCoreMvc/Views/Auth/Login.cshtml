@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Login 09</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                        <p class="text-center">Giriş Bilgilerinizi Giriniz.</p>
                        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                        {

                            <div>
                                <div class="form-group">
                                    <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                    <input type="text" name="Email" class="form-control" placeholder="Email" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" name="Password" class="form-control" placeholder="Şifre" required>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                            </div>

                            <div>
                                <td colspan="3"><span class="renk"> @ViewBag.Mesaj</span></td>
                            </div>
                            <div class="w-50 text-md-right" style="float:right">
                                <a href="/Register/UserRegister" style="color: #fff">Kayıt Ol</a>
                            </div>

                            <div class="w-50 text-md-left" style="float:right">
                                <a href="/Login/ForgotPassword" style="color: #fff">Şifremi Unuttum</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="/login-form-19/js/jquery.min.js"></script>
    <script src="/login-form-19/js/popper.js"></script>
    <script src="/login-form-19/js/bootstrap.min.js"></script>
    <script src="/login-form-19/js/main.js"></script>

</body>
</html>

